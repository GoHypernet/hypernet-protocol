{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "target": "es5",
        "baseUrl": ".",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "paths": {
            "@interfaces/*": ["protocol/interfaces/*"],
            "@implementations/*": ["protocol/implementations/*"]
        }
    },
    "include": ["protocol/**/*"],
    "exclude": ["node_modules/*", "**/*.spec.ts"]
}