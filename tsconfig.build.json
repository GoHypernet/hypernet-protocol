{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true,
    "target": "es6",
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "composite": true,
    "typeRoots": [
      "./packages/hypernet-core/src/typings",
      "./node_modules/@types"
    ],
    "paths": {
      "@interfaces/*": ["./interfaces/*"],
      "@implementations/*": ["./implementations/*"],
      "@tests/*": ["../test/*"],
      "@mock/*": ["../test/mock/*"],
      "@integration-tests/*": ["./packages/developer-ui/test/integration/*"],
      "@web-integration/*": ["./*"],
      "@web-integration-containers/*": ["./containers/*"],
      "@web-integration-contexts": ["./contexts"],
      "@web-integration-flows/*": ["./flows/*"],
      "@web-integration-hooks": ["./hooks"],
      "@web-integration-implementations/*": ["./implementations/*"],
      "@web-integration-interfaces/*": ["./interfaces/*"],
      "@web-integration-widgets/*": ["./widgets/*"],
      "@mobile-integration/*": ["./packages/mobile-integration/src/*"],
      "@mobileApp/*": ["./packages/mobileApp/src/*"],
      "@merchant-connector/*": ["./*"],
      "@merchant-iframe/*": ["./*"],
      "@test-merchant-connector/*": [
        "./packages/test-merchant-connector/src/*"
      ],
      "@utils/*": ["./*"],
      "@developer-ui/*": ["./*"],
      "@objects/*": ["./*"]
    }
  }
}
