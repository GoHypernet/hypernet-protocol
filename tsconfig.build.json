{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "downlevelIteration": true,
    "target": "es6",
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "typeRoots": [
      "./packages/hypernet-core/src/typings",
      "./node_modules/@types"
    ],
    "paths": {
      "@interfaces/*": ["./packages/hypernet-core/src/interfaces/*"],
      "@implementations/*": ["./packages/hypernet-core/src/implementations/*"],
      "@tests/*": ["./packages/hypernet-core/test/*"],
      "@mock/*": ["./packages/hypernet-core/test/mock/*"],
      "@integration-tests/*": ["./packages/developer-ui/test/integration/*"],
      "@web-integration/*": ["./packages/web-integration/src/*"],
      "@mobile-integration/*": ["./packages/mobile-integration/src/*"],
      "@mobileApp/*": ["./packages/mobileApp/src/*"],
      "@merchant-connector/*": ["./packages/merchant-connector/src/*"],
      "@merchant-iframe/*": ["./packages/merchant-iframe/src/*"],
      "@test-merchant-connector/*": [
        "./packages/test-merchant-connector/src/*"
      ],
      "@utils/*": ["./packages/utils/src/*"],
      "@developer-ui/*": ["./packages/developer-ui/src/*"]
    }
  }
}
