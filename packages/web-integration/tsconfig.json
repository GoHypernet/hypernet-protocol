{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDirs": ["./src", "../web-ui/src/*"],
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "module": "es6",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@hypernetlabs/hypernet-core": ["../hypernet-core/src/*"],
      "@hypernetlabs/web-ui": ["../web-ui/src/*"]
    }
  },
  "include": ["./src/**/*", "./typings/**/*", "**/__tests__/**/*"],
  "references": [{ "path": "../hypernet-core/tsconfig.json" }, { "path": "../web-ui/tsconfig.json" }]
}
