{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "rootDir": "./src",
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@hypernetlabs/hypernet-core": ["../hypernet-core/src"],
      "@hypernetlabs/web-ui": ["../web-ui/src"],
      "@web-integration/*": ["./src/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "references": [
    {
      "path": "../hypernet-core/tsconfig.json"
    },
    {
      "path": "../web-ui/tsconfig.json"
    }
  ]
}
