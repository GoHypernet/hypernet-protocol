{
  "name": "@hypernetlabs/developer-ui",
  "version": "1.0.0",
  "description": "Simple, complete UI that wraps hypernet-core, intended for developer use.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoHypernet/hypernet-protocol.git"
  },
  "bugs": {
    "url": "https://github.com/GoHypernet/hypernet-protocol/issues"
  },
  "homepage": "https://github.com/GoHypernet/hypernet-protocol/tree/master/packages/developer-ui#readme",
  "author": "Charlie Sibbach <charlie@hyperdyne.io>",
  "keywords": [
    "Typescript",
    "Hypernet",
    "Labs",
    "Blockchain",
    "Hypernet",
    "Core"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "!dist/test",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "bootstrap": "docker-compose down && docker-compose pull && docker-compose up -d && wait-on -l -d 15000 package.json && docker-compose up -d && yarn verify-backend && yarn deploy-custom-transfers",
    "build": "yarn clean && yarn compile && yarn webpack",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "compile": "tsc --build && cd ../.. && yarn alias",
    "alias": "tsc-alias",
    "webpack": "webpack",
    "clean-docker": "docker-compose down",
    "deploy-custom-transfers": "yarn ts-node scripts/deploy.ts",
    "start": "yarn start-backend && yarn start-web",
    "start-docker-sync": "docker-sync stop && docker volume create --name=hypernet-docker-sync",
    "start-backend": "docker-compose up -d && yarn verify-backend",
    "start-vector": "docker run -d -p 3001:80 vector-unit:latest",
    "start-web": "webpack serve --mode development",
    "test": "echo \"Error: run tests from root\" && exit 0",
    "test-integration": "cucumber-js --require-module ts-node/register --require-module tsconfig-paths/register --require 'test/integration/**/*.ts' test/integration/features/**/*.feature",
    "verify-backend": "docker ps -f status=running -f name=developer-ui | grep connextproject | if [ `wc -l` -ne 9 ]; then echo 'Error: did not detect 9 running docker containers!' && `exit 1`; fi"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@ethereum-waffle/chai": "^3.1.2",
    "@hypernetlabs/objects": "^0.0.1",
    "@hypernetlabs/web-integration": "^0.0.1",
    "bootstrap": "^4.5.3",
    "ethers": "^5.1.0",
    "jquery": "^3.5.1",
    "knockout": "^3.5.1",
    "neverthrow": "^4.1.0",
    "popper": "^1.0.1",
    "popper.js": "^1.16.1",
    "ts-node": "^9.0.0",
    "wait-on": "^5.2.0"
  }
}