{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@hypernetlabs/web-integration/*": ["../web-integration/src/*"],
      "@hypernetlabs/web-ui/*": ["../web-ui/src/*"]
    }
  },
  "include": ["./src/**/*", "./typings/**/*", "**/__tests__/**/*"],
  "references": [{ "path": "../web-integration/tsconfig.json" }, { "path": "../web-ui/tsconfig.json" }]
}
