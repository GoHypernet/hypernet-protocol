{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "./lib",
        "composite": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@interfaces/*": [
                "./src/interfaces/*"
            ],
            "@implementations/*": [
                "./src/implementations/*"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/__mocks__/**/*"
    ],
    "references": []
}