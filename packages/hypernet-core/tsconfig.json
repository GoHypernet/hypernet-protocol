{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "./dist",
        "composite": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@interfaces/*": ["./src/interfaces/*"],
            "@implementations/*": ["./src/implementations/*"],
            "@tests/*": ["./src/tests/*"],
            "@mock/*": ["./src/tests/mock/*"]
        },
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ],
    "references": []
}