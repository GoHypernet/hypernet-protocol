  "main": "lib/index",
  "typings": "lib/index",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/reflect-metadata": "^0.1.0",
    "@types/web3": "^1.2.2",
    "copyfiles": "^2.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "3box": "^1.21.0",
    "@metamask/detect-provider": "^1.1.0",
    "@statechannels/channel-client": "^0.3.4",
    "@statechannels/iframe-channel-provider": "^0.3.4",
    "@types/sjcl": "^1.0.29",
    "bignumber": "^1.1.0",
    "class-transformer": "^0.3.1",
    "moment": "^2.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "sjcl": "^1.0.8",
    "web3": "^1.2.11"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoHypernet/hypernet-protocol.git"
  },
  "scripts": {
    "test": "jest",
    "build": "npm run clean && npm run compile",
    "clean": "",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" lib",
    "compile": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
  "bugs": {
    "url": "https://github.com/GoHypernet/hypernet-protocol/issues"
  }
